@model EMS.Models.Event
@{
    ViewData["Title"] = "Event Details";
}

<h2>Event Details</h2>

<div>
    <h3>@Model.Name</h3>   <!-- Updated to 'Name' -->
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Date:</strong> @Model.Date.ToString("MMMM dd, yyyy")</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Organizer:</strong> @Model.Organizer</p>

    <!-- If user can edit, show the edit button -->
    @if (ViewBag.CanEdit)
    {
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Edit Event</a>
    }
</div>
