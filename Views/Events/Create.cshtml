@model EMS.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Event Name</label>
        <input asp-for="Name" class="form-control" id="Name" required />
    </div>
    <div class="form-group">
        <label for="Description">Event Description</label>
        <input asp-for="Description" class="form-control" id="Description" required />
    </div>
    <div class="form-group">
        <label for="Date">Event Date</label>
        <input asp-for="Date" type="datetime-local" class="form-control" id="Date" required />
    </div>
    <div class="form-group">
        <label for="Location">Event Location</label>
        <input asp-for="Location" class="form-control" id="Location" required />
    </div>
    <input asp-for="Organizer" type="hidden" value="@User.Identity.Name" /> <!-- Automatically sets the organizer to the current logged-in user -->
    
    <button type="submit" class="btn btn-primary">Create Event</button>
</form>
