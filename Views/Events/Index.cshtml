@model IEnumerable<EMS.Models.Event>

@{
    ViewData["Title"] = "Confirmed Event List";
}

<h1>Confirmed Event List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a href="@Url.Action("Index", new { sortBy = "Name", sortOrder = ViewData["SortOrder"] as string == "asc" ? "desc" : "asc" })">
                    Name
                    @if (ViewData["SortBy"] as string == "Name" && ViewData["SortOrder"] as string == "asc")
                    {
                        <span>&#8593;</span>  <!-- Upward arrow -->
                    }
                    else if (ViewData["SortBy"] as string == "Name" && ViewData["SortOrder"] as string == "desc")
                    {
                        <span>&#8595;</span>  <!-- Downward arrow -->
                    }
                </a>
            </th>
            <th>
                <a href="@Url.Action("Index", new { sortBy = "Description", sortOrder = ViewData["SortOrder"] as string == "asc" ? "desc" : "asc" })">
                    Description
                    @if (ViewData["SortBy"] as string == "Description" && ViewData["SortOrder"] as string == "asc")
                    {
                        <span>&#8593;</span>
                    }
                    else if (ViewData["SortBy"] as string == "Description" && ViewData["SortOrder"] as string == "desc")
                    {
                        <span>&#8595;</span>
                    }
                </a>
            </th>
            <th>
                <a href="@Url.Action("Index", new { sortBy = "Date", sortOrder = ViewData["SortOrder"] as string == "asc" ? "desc" : "asc" })">
                    Date
                    @if (ViewData["SortBy"] as string == "Date" && ViewData["SortOrder"] as string == "asc")
                    {
                        <span>&#8593;</span>
                    }
                    else if (ViewData["SortBy"] as string == "Date" && ViewData["SortOrder"] as string == "desc")
                    {
                        <span>&#8595;</span>
                    }
                </a>
            </th>
            <th>
                <a href="@Url.Action("Index", new { sortBy = "Location", sortOrder = ViewData["SortOrder"] as string == "asc" ? "desc" : "asc" })">
                    Location
                    @if (ViewData["SortBy"] as string == "Location" && ViewData["SortOrder"] as string == "asc")
                    {
                        <span>&#8593;</span>
                    }
                    else if (ViewData["SortBy"] as string == "Location" && ViewData["SortOrder"] as string == "desc")
                    {
                        <span>&#8595;</span>
                    }
                </a>
            </th>
            <th>
                <a href="@Url.Action("Index", new { sortBy = "Organizer", sortOrder = ViewData["SortOrder"] as string == "asc" ? "desc" : "asc" })">
                    Organizer
                    @if (ViewData["SortBy"] as string == "Organizer" && ViewData["SortOrder"] as string == "asc")
                    {
                        <span>&#8593;</span>
                    }
                    else if (ViewData["SortBy"] as string == "Organizer" && ViewData["SortOrder"] as string == "desc")
                    {
                        <span>&#8595;</span>
                    }
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventModel in Model)
        {
            <tr>
                <td>@eventModel.Name</td>
                <td>@eventModel.Description</td>
                <td>@eventModel.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@eventModel.Location</td>
                <td>@eventModel.Organizer</td>
            </tr>
        }
    </tbody>
</table>
