@model EMS.Models.Event
@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label for="Name">Event Name</label> <!-- Updated to 'Name' -->
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" rows="4" required>@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="Date">Date</label>
        <input type="datetime-local" class="form-control" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div class="form-group">
        <label for="Location">Location</label>
        <input type="text" class="form-control" id="Location" name="Location" value="@Model.Location" required />
    </div>

    <div class="form-group">
        <label for="Organizer">Organizer</label>
        <input type="text" class="form-control" id="Organizer" name="Organizer" value="@Model.Organizer" readonly />
        <small>If you want to change the organizer, please contact an admin.</small>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
