@model EMS.Models.User

@{
    ViewData["Title"] = "Account Details";
}

<h2>Account Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.UserName</h5> <!-- Replaced Name with UserName -->
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        
        <!-- Show roles from ViewData -->
        <p class="card-text"><strong>Role:</strong> @ViewData["Roles"]</p>
    </div>
</div>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Go to Home</a>
