@{
    ViewData["Title"] = "Dashboard - Event Management System";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h3>Upcoming Events</h3>
            @if (Model != null && Model.Any())
            {
                <ul class="list-group">
                    @foreach (var evt in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@evt.Name</strong>
                                <div class="text-muted">@evt.Date.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <span class="badge bg-primary">@evt.Location</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No upcoming events at the moment.</p>
            }
        </div>
        <div class="col-md-6">
            <h3>Actions</h3>
            <div class="d-grid gap-3">
                <a class="btn btn-primary btn-lg" asp-controller="Events" asp-action="Calendar">View Calendar</a>
                <a class="btn btn-success btn-lg" asp-controller="Events" asp-action="Create">Create an Event</a>
            </div>
        </div>
    </div>
</div>
